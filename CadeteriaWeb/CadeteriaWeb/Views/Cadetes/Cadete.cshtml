
@{
    ViewData["Title"] = "Cadete";
}

<h1>Registro Cadetes</h1>

<form asp-controller="Cadete" asp-action="Cadete">
    <div class="mb-3">
        <label for="nombre" class="form-label">Nombre</label>
        <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Ej. Exequiel Diaz">
    </div>
    <div class="mb-3">
        <label for="telefono" class="form-label">telefono</label>
        <input type="text" class="form-control" id="telefono" name="telefono" placeholder="381 123 45 67">
    </div>
    <div class="mb-3">
        <label for="direccion" class="form-label">Domicilio</label>
        <textarea class="form-control" id="direccion" name="direccion" rows="3"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Registrar</button>
</form>
